{
  "name": "pyebot",
  "version": "1.0.0",
  "description": "Bot del Discord oficial de la comunidad Programadores y Estudiantes (PyE)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --watch",
    "start": "tsc && tsc-alias && node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node .\"",
    "fmt": "biome format --write",
    "fmt:check": "biome format",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "clean": "rimraf dist commands.json"
  },
  "author": "Comunidad PyE",
  "license": "MIT",
  "packageManager": "bun@1.2.20",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/node": "^24.1.0",
    "lefthook": "^1.12.2",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.12.0",
    "dotenv": "^17.2.1",
    "highlight.js": "^11.11.1",
    "module-alias": "^2.2.3",
    "mongodb": "^6.8.0",
    "onnxruntime-node": "1.22.0-rev",
    "openai": "^6.15.0",
    "paddleocr": "^1.0.6",
    "seyfert": "^3.2.5",
    "sharp": "^0.34.3",
    "zod": "^4.1.13"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs,json}": "biome check --write"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
